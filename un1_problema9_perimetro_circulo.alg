algoritmo "círculo"
var
raio, area, perimetro : real

inicio

escreva(" Digite o valor do raio: ")
leia(raio)

 // cálculo da área
area <- pi * (raio^2)
// cálculo do perímetro
perimetro <- 2 * pi * raio

 // resultado
escreval(" Valor da área: ", area)
escreval(" Valor do perímetro: ", perimetro)

fimalgoritmo
